//Write a program to read the character and display in three different types along with system(cls)
#include<stdio.h>
int main (){
        system("cls");
        char ch1,ch2,ch3;
        printf("Enter ch1: ");
        scanf("%c",&ch1);
        printf("Enter ch2: ");
        scanf("\n%c",&ch2);
        printf("Enter ch3: ");
        scanf("\n%c",&ch3);

        printf("ch1 = %c  ch2 = %c  ch3 = %c", ch1,ch2,ch3);

        return 0;
}
